  "name": "dashstation-engine",
  "version": "1.0.0",
  "description": "Game Engine",
  "main": "main.js",
  "build": {
    "appId": "com.dashstation.app",
    "win": {
        "target": "nsis",
        "icon": "path/to/icon.ico"
    },
    "npmRebuild": false,
    "asarUnpack": [
        "**/*.node"
    ],
    "directories": {
        "output": "dist"
    }
  },
  "scripts": {
    "start": "npm-run-all --parallel sass electron",
    "sass": "sass --watch scss/global.scss:./css/global.css",
    "electron": "electron .",
    "build": "electron-builder"
  },
  "author": "BioBit Games Ltda.",
  "license": "ISC",
  "devDependencies": {
    "electron": "^30.0.2",
    "electron-builder": "^25.0.0-alpha.9"
  },
  "dependencies": {
    "electron-reload": "^2.0.0-alpha.1",
    "npm-run-all": "^4.1.5",
    "remixicon": "^4.2.0"
  }
}
